<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/first_layout"
        android:background="@drawable/rec_box_rounded_corner"
        android:padding="4dp"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/img_compare"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/colorPrimaryDark"
            />

        <TextView
            android:padding="8dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Compare Restaurant"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="50dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/white"
            android:elevation="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/compare_criteria_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey">

        <LinearLayout
            android:background="@drawable/rec_box_rounded_corner"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:id="@+id/compare_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_rating_compare"
                android:elevation="20dp"
                android:padding="10dp"
                android:text="Rating"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/rec_box_rounded_corner"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:id="@+id/compare_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_price_compare"
                android:elevation="20dp"
                android:padding="10dp"
                android:text="Price"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:id="@+id/container1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>


    </ScrollView>

    </LinearLayout>