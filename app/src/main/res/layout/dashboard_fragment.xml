<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/first_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="40dp"
            android:padding="6dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/user_image"
                android:layout_gravity="center"
                android:background="@drawable/circle"
                android:layout_width="128dp"
                android:layout_height="128dp" />

            <TextView
                android:padding="8dp"
                android:gravity="center"
                android:id="@+id/username"
                android:text="Username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/update"
                android:layout_marginTop="40dp"
                android:padding="4dp"
                android:background="@drawable/rec_box_rounded_corner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="6dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Update Profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/about"
                android:layout_marginTop="15dp"
                android:padding="4dp"
                android:background="@drawable/rec_box_rounded_corner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="6dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="About"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/settings"
                android:layout_marginTop="15dp"
                android:padding="4dp"
                android:background="@drawable/rec_box_rounded_corner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="6dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <Button
                android:background="@drawable/menu_item_pressed"
                android:id="@+id/logout"
                android:text="LogOut"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </FrameLayout>
    </ScrollView>
    <FrameLayout
        android:visibility="invisible"
        android:layout_margin="16dp"
        android:id="@+id/second_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout

                android:padding="6dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <TextView
                android:padding="4dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="First Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <EditText
                android:padding="4dp"
                android:hint="New First name"
                android:id="@+id/new_fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

                <TextView
                    android:padding="4dp"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Last Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                android:padding="6dp"
                android:hint="New Last name"
                android:id="@+id/new_lname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

                <TextView
                    android:padding="4dp"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Email Address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                android:padding="6dp"
                android:hint="New Email address"
                android:id="@+id/new_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

                <Button
                    android:layout_marginTop="24dp"
                    android:background="@drawable/menu_item_pressed"
                    android:text="Update"
                    android:id="@+id/update_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>


        </FrameLayout>

    </ScrollView>
    </FrameLayout>
</RelativeLayout>
